<br><br>
<%= form_for @plant, url: plants_new_path do |f| %>
  	<div style = "text-align:center">
	  	<%= f.collection_radio_buttons(:ndex, (1..6).map {|ndex| [ndex, ndex]}, :first, :last) do |b| %>
		  <div class="plants-choice-container">
		    <%= b.label { image_tag("plants/#{b.text}.jpg") + b.radio_button } %> <p> <br><br>
		  </div>
		<% end %> 
	</div> <br>

	<div style = "text-align:center">
		<%= f.button :submit, class: "select-plant-button" %>
	</div>

<% end %>
